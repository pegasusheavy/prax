model User {
    id       Int      @id @auto
    email    String   @unique
    posts    Post[]
    profile  Profile?
}

model Post {
    id       Int    @id @auto
    title    String
    author   User   @relation(fields: [authorId], references: [id])
    authorId Int
}

model Profile {
    id     Int    @id @auto
    bio    String?
    user   User   @relation(fields: [userId], references: [id])
    userId Int    @unique
}

